create table public.lost_items (
  id bigint generated by default as identity not null,
  created_at timestamp with time zone not null default now(),
  name text not null,
  description text not null,
  location text not null,
  "lostDate" date not null,
  "userId" bigint not null,
  category public.category not null,
  status text not null default 'lost'::text,
  constraint lost_items_pkey primary key (id),
  constraint lost_items_userid_fkey foreign KEY ("userId") references users (id)
) TABLESPACE pg_default;

create trigger lost_item_notify
after INSERT on lost_items for EACH row
execute FUNCTION notify_lost_item ();

create trigger trg_notify_on_lost_insert
after INSERT on lost_items for EACH row
execute FUNCTION notify_on_lost_insert ();

create trigger trigger_notify_on_lost_insert
after INSERT on lost_items for EACH row
execute FUNCTION notify_on_lost_insert ();