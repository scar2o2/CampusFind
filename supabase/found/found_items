create table public.found_items (
  id bigint generated by default as identity not null,
  created_at timestamp with time zone not null default now(),
  "userId" bigint not null,
  name text not null,
  category public.category not null,
  description text not null,
  "foundDate" date not null,
  image_url text not null,
  location text not null,
  status text not null default 'found'::text,
  constraint found_items_pkey primary key (id),
  constraint found_items_userid_fkey foreign KEY ("userId") references users (id)
) TABLESPACE pg_default;

create trigger trg_notify_on_found_insert
after INSERT on found_items for EACH row
execute FUNCTION notify_on_found_insert ();

create trigger trigger_notify_on_found_insert
after INSERT on found_items for EACH row
execute FUNCTION notify_on_found_insert ();